{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "typeRoots": ["./src/types", "node_modules/@types"]
  },
  "include": ["**/*.ts", "**/*.js", "src/types/", "**/*.d.ts"]
}
